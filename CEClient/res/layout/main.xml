<?xml version="1.0" encoding="UTF-8"?> 
<TabHost android:id="@android:id/tabhost" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/main_m_bg"> 
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@android:id/tabcontent" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0" />
        <TabWidget android:id="@android:id/tabs" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0.0" />
            <RadioGroup  
                android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/main_radio" android:background="@drawable/main_bottom_bg" 
                android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="5px" android:paddingRight="5px">
                <RadioButton  android:id="@+id/radio_button0" android:drawableTop="@drawable/main_btn_home" style="@style/main_tab_bottom" android:checked="true"/>
                <RadioButton  android:id="@+id/radio_button1" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_btn_square" style="@style/main_tab_bottom" />
                <RadioButton  android:id="@+id/radio_button2" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_btn_message" style="@style/main_tab_bottom" />
                <RadioButton  android:id="@+id/radio_button3" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_btn_friend" style="@style/main_tab_bottom" />
                <RadioButton  android:id="@+id/radio_button4" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_btn_more" style="@style/main_tab_bottom" />
            </RadioGroup> 
    </LinearLayout> 
</TabHost> 
