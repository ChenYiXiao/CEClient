<?xml version="1.0" encoding="UTF-8"?> 
<TabHost android:id="@android:id/tabhost" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/main_bg_main"> 
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@android:id/tabcontent" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0" />
        <TabWidget android:id="@android:id/tabs" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0.0" />
            <RadioGroup  
                android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/main_radio" android:background="@drawable/main_bottom_bg" 
                android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="5px" android:paddingRight="5px">
                <RadioButton  android:id="@+id/radio_home" android:drawableTop="@drawable/main_radio_home" style="@style/main_tab_bottom" android:checked="true" android:layout_height="fill_parent"/>
                <RadioButton  android:id="@+id/radio_square" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_radio_square" style="@style/main_tab_bottom" android:layout_height="fill_parent"/>
                <RadioButton  android:id="@+id/radio_message" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_radio_message" style="@style/main_tab_bottom" android:layout_height="fill_parent"/>
                <RadioButton  android:id="@+id/radio_friend" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_radio_friend" style="@style/main_tab_bottom" android:layout_height="fill_parent"/>
                <RadioButton  android:id="@+id/radio_more" android:layout_marginTop="2.0dip" android:drawableTop="@drawable/main_radio_more" style="@style/main_tab_bottom" android:layout_height="fill_parent"/>
            </RadioGroup> 
    </LinearLayout> 
</TabHost> 
